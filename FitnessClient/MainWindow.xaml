<Window x:Class="FitnessClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FitnessClient" Height="600" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <TabControl Margin="3">
        <TabItem Header="Training" Content="{Binding TrainingView}"/>
        <TabItem Header="Planung" Content="{Binding PlanungView}"/>
        <TabItem Header="Verzeichnisse" Content="{Binding VerzeichnisView}"/>
        <TabItem Header="Themen" Content="{Binding ThemenView}"/>
        <TabItem Header="Übungen" Content="{Binding UebungView}"/>
    </TabControl>
</Window>
