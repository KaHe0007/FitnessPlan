<Window x:Class="FitnessClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FitnessClient" Height="800" Width="900">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel>
        <StackPanel Margin="8" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Training" Margin="0,0,5,0" Command="{Binding TrainingCommand}"/>
            <Button Content="Planung" Style="{StaticResource StyButtonLeft}" Command="{Binding PlanungCommand}"/>
            <Button Content="Kataloge" Style="{StaticResource StyButtonMiddle}" Command="{Binding KatalogeCommand}"/>
            <Button Content="Themen" Style="{StaticResource StyButtonMiddle}" Command="{Binding ThemaCommand}"/>
            <Button Content="Übungen" Style="{StaticResource StyButtonRight}" Command="{Binding UebungCommand}"/>
            <Button Content="Einstellungen" Margin="5,0,0,0" Command="{Binding EinstellungenCommand}"/>
        </StackPanel>
        <ContentControl Content="{Binding ContentView}" Width="850" Height="660"/>
    </StackPanel>
</Window>
